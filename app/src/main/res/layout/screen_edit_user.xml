<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    android:orientation="vertical"
    tools:context=".ui.createaccount.ScreenCadPEV">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="344dp"
        android:layout_height="97dp"
        android:fontFamily="@font/rasa_bold"
        android:text="Atualize seus dados"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rasa_bold"
                android:paddingLeft="10dp"
                android:text="Nome de UsuÃ¡rio:"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="38dp"
                    android:layout_height="50dp"
                    android:background="@drawable/imageview_border_cad"
                    app:srcCompat="@drawable/ic_baseline_person_pin_24" />

                <EditText
                    android:id="@+id/upUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_border_cad"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rasa_bold"
                android:paddingLeft="10dp"
                android:text="Contato:"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="38dp"
                    android:layout_height="50dp"
                    android:background="@drawable/imageview_border_cad"
                    app:srcCompat="@drawable/ic_round_local_phone_24" />

                <EditText
                    android:id="@+id/upContato"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_border_cad"
                    android:inputType="phone"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/updateCad"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_decide_border"
        android:fontFamily="@font/rasa_bold"
        android:text="Atualizar"
        android:textColor="@color/primaryBackground"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

</androidx.constraintlayout.widget.ConstraintLayout>